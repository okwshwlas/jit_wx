.tree {
	position:relative;
	overflow:hidden;
}
.tree .option {
	height: 22px;
	line-height: 22px;
	text-align: center;
	background: #CCCCCC url('../images/tree/tree-option.gif') repeat-x;
	border: 1px #C2C8CB solid;
	margin: 5px 5px;
	position:relative;
}
.tree .option span {
	padding-left: 13px;
	background-position: left 2px;
	cursor: pointer;
	background-repeat: no-repeat;
}
.tree .option .openAll {
	background-image: url('../images/tree/tree-openAll.jpg');
	padding-right: 10px;
}
.tree .option .closeAll {
	background-image: url('../images/tree/tree-closeAll.jpg');
}
.tree .root {
	overflow: auto;
	padding-left: 20px;
	
}
.tree  a{
	color:black;
}
.tree  a:hover{
	color:red;
}
.tree ul li {
	line-height: 20px;
	padding-left: 20px;
	background: url('../images/tree/tree-leaf.gif') no-repeat scroll left 2px;;
	white-space:nowrap;

}
.tree ul li ul {
	display: none;
}
.tree .node {
	background: url('../images/tree/tree-node-off.gif') no-repeat;
	padding-left: 32px;
	margin-left: -12px;
}
.tree .node span {
	cursor: pointer;
	display: block;
	height: 20px;
	white-space:nowrap;
	margin-left:-35px;
	padding-left:35px;
}
.tree .on {
	background: url('../images/tree/tree-node-on.gif') no-repeat;
}

.tree  .ulon{
	display:block;
}